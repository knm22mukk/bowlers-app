<div class="card mb-3">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= @ball.name %></h5>
    
    <table cellspacing="0" class="table">
      <tbody>
        <th>ボール特徴</th>
        <td><%= @ball.content %></td>
      </tbody>
      <tbody>
        <th>メーカー</th>
        <td><%= @ball.brand %></td>
      </tbody>
      <tbody>
        <th>定価</th>
        <td>¥<%= @ball.cost %>-</td>
      </tbody>
      <tbody>
        <th>発売日</th>
        <td><%= @ball.release_date %></td>
      </tbody>
      <tbody>
        <th>備考</th>
        <td><%= @ball.memo %></td>
      </tbody>
    </table>
  </div>
</div>
<%= link_to '編集する', edit_ball_path(@ball), class: "btn btn-primary" %>
<%= link_to '削除する', @ball, method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: "btn btn-danger" %>
<%= link_to 'トップに戻る', "/", class: "btn btn-info" %>
