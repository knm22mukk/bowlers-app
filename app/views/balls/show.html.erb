<div class="card mb-4 p-3 shadow-sm">
  <%= image_tag @ball.image.url if @ball.image? %>
  <div class="card-body">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th style="width: 150px;">ボール名</th>
          <th><%= @ball.name %></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>メーカー名</td>
          <td><%= @ball.brand %></td>
        </tr>
        <tr>
          <td>定　価</td>
          <td><%= @ball.cost %> 円</td>
        </tr>
        <tr>
          <td>特　徴</td>
          <td><%= @ball.content %></td>
        </tr>
        <tr>
          <td>備　考</td>
          <td><%= @ball.memo %></td>
        </tr>
      </tbody>
    </table>
    
  </div>
  <%= render 'ball_favorites/favball_button', ball: @ball %>
</div>

<% if current_user.admin? %>
  <%= link_to '編集する', edit_ball_path(@ball), class: "btn btn-primary" %>
  <%= link_to '削除する', @ball, method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: "btn btn-danger" %>
<% end %>
<%= link_to 'トップに戻る', "/", class: "btn btn-info" %>