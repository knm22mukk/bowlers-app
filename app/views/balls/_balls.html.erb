<div class="row">
  <% balls.each do |ball| %>
    <div class="col-md-4 col-sm-6 col-xs-12 p-2 m-1">
      <div class="card">
        <%= image_tag ball.image.url, alt: "ball_image", class: "w-75" %>
        <div class="card-body">
          <h5 class="card-title">ボール名：<%= link_to ball.name, ball_path(ball) %></h5>
          <p class="card-text">メーカー名：<%= ball.brand %></p>
        </div>
        <div class="card-body">
          <%= render 'ball_favorites/favball_button', ball: ball %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% if current_user.admin? %>
  <%= link_to 'ボール登録', new_ball_path, class: 'btn btn-primary mt-5' %>
<% end %>
