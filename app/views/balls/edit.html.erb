<div class="text-center">
  <h1>ボール編集</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @ball, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :name, 'ボール名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :brand, 'メーカー名' %>
        <%= f.text_field :brand, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :cost, '定価' %>
        <%= f.text_field :cost, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, 'コンテンツ' %>
        <%= f.text_area :content, class: "form-control", rows: 5 %>
      </div>
      
      <div class="form-group">
        <%= f.label :memo, 'メモ' %>
        <%= f.text_area :memo, class: "form-control", rows: 5 %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, '画像' %>
        <% if @ball.image_cache %>
          <%= image_tag "/#{@ball.image.cache_path}", class: "card", :size =>'300x300', alt: "ball_image" %>
        <% else %>
          <%= image_tag @ball.image.url, class: "card", :size =>'300x300', alt: "ball_image" if @ball.image? %>
        <% end %>
        <%= f.file_field :image, class: 'form-control' %>
        <%= f.hidden_field :image_cache %>
      </div>

      <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
      <%= link_to 'キャンセル', ball_path, class: 'btn btn-info mt-3' %>
    <% end %>
    
  </div>
</div>