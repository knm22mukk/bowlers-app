<div class="text-center">
  <h1>ボール編集</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @ball, local: true) do |f| %>
      <% if @ball.errors.any? %>
        <div id="error_explanation" class="alert alert-warning">
          <ul class="mb-0">
            <% ball.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :name, 'ボール名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :brand, 'メーカー名' %>
        <%= f.text_field :brand, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :cost, '定価' %>
        <%= f.text_field :cost, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, 'コンテンツ' %>
        <%= f.text_area :content, class: "form-control", rows: 5 %>
      </div>
      
      <div class="form-group">
        <%= f.label :memo, 'メモ' %>
        <%= f.text_area :memo, class: "form-control", rows: 5 %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, 'ボール画像' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>

      <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
      <%= link_to 'キャンセル', user_path, class: 'btn btn-info mt-3' %>
    <% end %>
    
  </div>
</div>