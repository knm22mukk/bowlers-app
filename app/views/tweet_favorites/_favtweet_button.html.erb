<% if current_user.favtweet?(tweet) %>
  <%= form_with(model: current_user.tweet_favorites.find_by(tweet_id: tweet.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :tweet_id, tweet.id %>
    <%= f.submit 'いいねを取り消す', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.tweet_favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :tweet_id, tweet.id %>
    <%= f.submit 'いいね', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>