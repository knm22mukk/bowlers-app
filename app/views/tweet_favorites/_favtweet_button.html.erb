<% if current_user.favtweet?(tweet) %>
  <%= form_with(model: current_user.tweet_favorites.find_by(tweet_id: tweet.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :tweet_id, tweet.id, id: "tweet_#{tweet.id}" %>
    <%= button_tag '<i class="fas fa-thumbs-up"></i>いいね取り消す'.html_safe, class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.tweet_favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :tweet_id, tweet.id, id: "tweet_#{tweet.id}" %>
    <%= button_tag '<i class="far fa-thumbs-up"></i>いいね'.html_safe, class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>
