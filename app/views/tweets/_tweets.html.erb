<div class="row">
  <% tweets.each do |tweet| %>
    <div class="col-md-4 text-center">
      <% if tweet.user.image? %>
        <%= image_tag tweet.user.image.url, alt: "user_icon", class: "card-img-top w-50" %>
      <% else %>
        <img class="card-img-top w-50" src="<%= gravatar_url(tweet.user) %>" alt="user icon">
      <% end %>
      <h4 class="media-heading mt-3"><%= link_to tweet.user.name, user_path(tweet.user) %></h4>
    </div>
    
    <div class="card col-sm-8 text-center">
      <div class="card-body">
        <h5 class="card-title"><%= link_to tweet.title, tweet %></h5>
        <%= simple_format(tweet.content, class: "card-text") %>
        <%= image_tag tweet.image.url, class: "card-img-bottom w-75", alt: "tweet_image" if tweet.image? %>
        <p class="card-text"><small class="text-muted">posted at <%= tweet.created_at.to_s(:datetime_jp) %></small></p>
        <%= render 'tweet_favorites/favtweet_button', tweet: tweet %>
      </div>
    </div>
    <hr class="mt-3">
  <% end %>
  <%= paginate tweets %>
</div>