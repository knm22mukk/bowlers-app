<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <% if @user.image? %>
        <%= image_tag @user.image.url, alt: "user_icon", class: "card-img-top w-75 d-block mx-auto" %>
      <% else %>
        <img class="card-img-top d-block mx-auto" src="<%= gravatar_url(@user) %>" alt="default_icon">
      <% end %>
    </div>  
      <div class="card mb-3">
        <div class="card-header"><%= @user.name %></div>
        <div class="card-body text-secondary">
          <%= simple_format(@user.introduce, class: "card-text") %>
          <%= render "relationships/follow_button", user: @user %>
        </div>
        <% if @user.id == current_user.id %>
          <%= link_to '編集する', edit_user_path(@user), class: "btn btn-primary mt-2" %>
          <%= link_to 'ログアウト', logout_path, method: :delete, data: {confirm: 'ログアウトしますか？'}, class: "btn btn-danger mt-2" %>
        <% end %>
      </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link  <%= 'active' if current_page?(user_path(@user)) %>">投稿一覧  <span class="badge badge-secondary"><%= @count_tweets %></span></a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link  <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link  <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー  <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
      <li class="nav-item"><a href="<%= favtweets_user_path(@user) %>" class="nav-link  <%= 'active' if current_page?(favtweets_user_path(@user)) %>">いいね投稿  <span class="badge badge-secondary"><%= @count_favtweets %></span></a></li>
      <li class="nav-item"><a href="<%= favballs_user_path(@user) %>" class="nav-link  <%= 'active' if current_page?(favballs_user_path(@user)) %>">お気に入りボール  <span class="badge badge-secondary"><%= @count_favballs %></span></a></li>
    </ul>
    <%= render 'users', users: @followings %>
  </div>
</div>